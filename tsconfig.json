{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"page/*": ["src/app/page/*"],
			"layout/*": ["src/shared/component/layout/*"],
			"shared/*": ["src/shared/*"],
			"core/*": ["src/shared/component/*"],
			"common/*": ["src/app/component/*"],
			"error": ["src/shared/error"]
		},
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"]
}
