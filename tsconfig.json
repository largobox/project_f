{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"module/*": ["src/app/module/*"],
			"layout/*": ["src/shared/layout/*"],
			"shared/*": ["src/shared/*"],
			"core/*": ["src/shared/component/*"],
			"core": ["src/shared/component"],
			"common/*": ["src/app/component/*"],
			"error/*": ["src/shared/error/*"],
			"locale/*": ["src/shared/locale/*"],
			"api/*": ["src/api/*"],
			"type/*": ["src/shared/type/*"],
			"type": ["src/shared/type"],
			"icons": ["src/shared/component/icons"]
		},
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"]
}
